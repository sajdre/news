<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.pvt.Category" table="categories">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="increment">
                <param name="increment">id</param>
            </generator>
        </id>
        <property name="category" column="CATEGORY" type="string"/>

        <list name="news" lazy="false" cascade="all">
            <key column="ID"/>
            <list-index column="category" base="0"/>
            <one-to-many class="com.pvt.News"/>
        </list>
    </class>
</hibernate-mapping>
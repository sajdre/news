<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.pvt.News" table="news">
<id name="id" type="java.lang.Integer">
    <column name="ID"/>
    <generator class="increment">
        <param name="increment">id</param>
    </generator>
</id>
<property name="category" column="category" type="java.lang.Integer"/>
<property name="title" column="TITLE" type="string"/>
<property name="annotation" column="ANNOTATION" type="string"/>
<property name="creationdate" column="CREATIONDATE" type="string"/>
<property name="author" column="AUTHOR" type="string"/>
<property name="content" column="content" type="string"/>

</class>
</hibernate-mapping>